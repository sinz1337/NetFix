<Page x:Class="NetFix.PageFolder.UserListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NetFix.PageFolder"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="870" d:DesignWidth="1745"
      Title="Список пользователей"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="1400"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="90"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Поиск"
               Grid.Row="1" Grid.Column="1"
               Style="{DynamicResource LabelLogo}"
               HorizontalAlignment="Right"
               FontSize="50"/>

        <Label Content="Список заказов"
               Grid.Column="2"
               Grid.Row="0"
               Grid.ColumnSpan="1"
               Style="{DynamicResource LabelLogo}"/>

        <TextBox x:Name="SearchTB"
                 Grid.Row="1"
                 Grid.Column="2"
                 Height="55"
                 Width="1350"
                 TextChanged="SearchTB_TextChanged"
                 Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                 BorderThickness="2"
                 FontFamily="Verdana"
                 FontSize="18"
                 materialDesign:TextFieldAssist.TextFieldCornerRadius="10"/>

        <DataGrid x:Name="ListUserDG"
                  Grid.Row="2"
                  Grid.Column="1"
                  Grid.ColumnSpan="2"
                  AutoGenerateColumns="False"
                  Background="Transparent"
                  IsReadOnly="True">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Изменить"
                              x:Name="EditMI"
                              Click="EditMI_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО"
                                    Width="*"
                                    Binding="{Binding FIOCustomer}"/>
                <DataGridTextColumn Header="Заказ"
                                    Width="*"
                                    Binding="{Binding OrderCustomer}"/>
                <DataGridTextColumn Header="Номер телефона"
                                    Width="*"
                                    Binding="{Binding NumberCustomer}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
